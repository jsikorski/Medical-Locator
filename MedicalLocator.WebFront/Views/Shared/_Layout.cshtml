<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="initial-scale=1.0, user-scalable=no" />
        <meta http-equiv="content-type" content="text/html; charset=UTF-8" />
        <title>@ViewBag.Title</title>
        @StyleSheet("~/Content/jQuery/jquery-ui-1.8.20.custom.css")
        @StyleSheet("~/Content/Common.css")
        @StyleSheet("~/Content/GoogleMaps.css")
        @StyleSheet("~/Content/Menu.css")
        @StyleSheet("~/Content/Site.css")
    
        @Script("~/Scripts/jQuery/jquery-1.7.2.min.js")
        @Script("~/Scripts/jQuery/jquery-ui-1.8.20.custom.min.js")
        @Script("~/Scripts/Utils/notifier.js")
        @Script("~/Scripts/Utils/notifications.js")
        @Script("~/Scripts/Utils/googleMapsApi.js")
        @Script("~/Scripts/Utils/busyIndicator.js")
        @Script("~/Scripts/Utils/dialogs.js")
        @Script("~/Scripts/MedicalLocator/menu.js")
        @Script("~/Scripts/MedicalLocator/googleMaps.js")
        @Script("~/Scripts/MedicalLocator/geoLocation.js")
        @Script("~/Scripts/MedicalLocator/searching.js")
    </head>
    <body>
        @Html.Partial("_OverlayPartial")
        @Html.Partial("_MenuPartial")
        @RenderBody()

        <script type="text/javascript">
            $(function () {
                notificationsManager.tryShowNotification();
            });
        </script>
    </body>
</html>
@helper StyleSheet(string cssUrl)
    {
    <link href="@Url.Content(cssUrl)" rel="stylesheet" type="text/css"/>    
}
@helper Script(string scriptUrl)
    {
    <script src="@Url.Content(scriptUrl)" type="text/javascript"></script>    
}